{
  "$schema": "https://turborepo.com/schema.json",
  "concurrency": "25",
  "tasks": {
    "dev": {
      "with": ["dev:ts", "dev:js", "dev:barrel"],
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only"
    },
    "dev:ts": {
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only",
      "outputs": ["dist/**"]
    },
    "dev:js": {
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only",
      "outputs": ["dist/**"]
    },
    "dev:barrel": {
      "cache": false,
      "persistent": false,
      "outputLogs": "new-only",
      "outputs": ["dist/**"]
    }
  }
}
